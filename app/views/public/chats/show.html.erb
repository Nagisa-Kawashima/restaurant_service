<div class="container">
  <div class="row mb-3 d-flex justify-content-center">
    <div class="col-lg-8">
      <h5 class="text-center"><%= image_tag @user.get_profile_image, class: "user_image" %><br /><%= @user.name %><br /> <%= @user.name %>さんとのチャットルーム <i class="far fa-comment"></i></h5>
      <%= form_with model: @chat do |f| %>
        <%= f.text_area :message, class: "form-control" %>
        <%= f.hidden_field :room_id %>
        <%= f.submit "送信する",class: "mt-3 btn btn-outline-secondary" %>
      <% end %>
      <% if @chats.present? %>
        <div class="message">
          <%= render "public/chats/chat", chats: @chats, user: @user %>
        </div>
      <% else %>
        <p class="text-center"><%= @user.name %>さんと、チャットをはじめよう！</p>
      <% end %>
    </div>
  </div>
</div>